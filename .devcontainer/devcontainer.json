{
  "name": "Monorepo Dev Environment",
  // Points to the docker-compose.yml file that defines the services.
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  // The service to attach VS Code to.
  "service": "devcontainer",
  // The folder inside the container to open VS Code in.
  "workspaceFolder": "/workspace",
  // The action to take when the window is closed.
  "shutdownAction": "stopCompose",
  // VS Code customizations.
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "ms-vscode-remote.remote-containers",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    }
  },
  // The command to run after the container is created.
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  // The user to run as inside the container.
  "remoteUser": "node"
}
